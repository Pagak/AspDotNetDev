@model WebApplication1.ViewModels.BlogViewModel
@{
    ViewBag.Title = "Blog";
}

<div class="container">
    <div class="row">
        <div class="col"><h2>Index</h2></div>
    </div>
    <div class="row">
        @foreach (var article in Model.Articles)
        {
            <div class="col">
                <div class="card">
                    <div class="card-header"><h2>@article.Title</h2></div>
                    <div class="card-body">@article.Content</div>
                    <div class="card-footer">
                        <a href="@Url.Action("Show","Blog", new { Id = article.Id})" class="btn btn-primary btn-sm">Lire la suite</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

